<main class="main">
  <div class="row">
    <div class = "col s2"></div>
    <div class="input-field col s2">
      <input id="calories" type="number" class="validate">
      <label for="calories">Calories</label>
    </div>

    <div class="input-field col s2">
      <input id="protein" type="number" class="validate">
      <label for="protein">Protein(g)</label>
    </div>

    <div class="input-field col s2">
      <input id="carbs" type="number" class="validate">
      <label for="carbs">Carbs(g)</label>
    </div>

    <div class="input-field col s2">
      <input id="fat" type="number" class="validate">
      <label for="fat">Fat(g)</label>
    </div>

    <div class="row">
      <div class="col s10"></div>
        <div class="col s2">
          <button class="btn waves-effect waves-light" id="submitsearch" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
    </div>
<div class = "col s2"></div>
  </div>

<div class = "row">
  {{#each recipes}}
   <div class="col s12 m6">
     <div class="card" id="recipe{{this.id}}">
       <div class="card-image">
         <img src={{this.image}}>
         <span class="card-title">{{this.title}}</span>
         <a class="btn-floating halfway-fab waves-effect waves-light red savebtn"><i class="material-icons">save</i></a>
       </div>
       <div class="card-content">
         <p>Calories(g): {{this.calories}}</p>
         <p>Protein(g): {{this.protein}}</p>
         <p>Carbs(g): {{this.carbs}}</p>
         <p>Fat(g): {{this.fat}}</p>
           <a href={{this.link}}>Click to Recipe</a>
       </div>
     </div>
   </div>
  {{/each}}
</div>

</main>
