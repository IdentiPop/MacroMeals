<main class = "mainloggedout">
  <div class="row">

  <div class = "col s1"></div>
  <div class = "col s6">
    <div class = "row"></div>
    <div class= "row">
    <form id="signup" name="signup" method="post" action="/signup">
        <label for="username">Username</label>
        <input class="text white-text" name="username" type="text" />
        <label for="firstname">First Name</label>
        <input name="firstname" type="text" class="white-text" />
